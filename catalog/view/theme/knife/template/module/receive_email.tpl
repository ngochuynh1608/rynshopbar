<div class="box box-reg-mail">	<h2 class="title ttu pro"><i class="icon-ib icon-mailbox"></i><span>Đăng ký nhận mail</span></h2>	<form method="post" action="<?php echo $this->url->link('module/receive_email'); ?>" class="form">		<div class="form-group">			<input type="text" name="email" class="form-control" placeholder="Nhập email đăng ký">		</div>		<div class="text-center">			<button type="submit" name="register" class="btn">Đăng ký</button>		</div>	</form></div><script>	$(document).ready(function(){		$(".form").submit(function(){			var postData = $(this).serializeArray();			$.ajax(			{				url : "<?php echo $this->url->link('module/receive_email'); ?>",				type: "post",				data : postData,				success:function(result) 				{					if(result == true)						alert("Bạn đã thực hiện đăng ký nhận email thành công!");					else	alert("Địa chỉ email không hợp lệ!");				},							});			return false;		});	});</script>